---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import  Button  from '../ui/components/Button/atoms/button';


---

<Layout title="Welcome to Backoffice OpenScience">
  <div class="container">
    <h2>Ticket SEM 009 Secondary Button with Icons</h2>
    <h3>Wendy</h3>
    <div class="button-container">
      <Button
        label="Small Button" 
        size="small" 
        borderRadius="8px"
        backgroundColor="#7f7f7f"
        color="#ffffff"
        icon='+'
      />
      <Button 
        label="Medium Button" 
        size="medium" 
        borderRadius="12px"
        backgroundColor="#9e9e9e"
        color="#000000"
           icon='+'
      />
      <Button 
        label="Large Button" 
        size="large" 
        borderRadius="16px"
        backgroundColor="#bdbdbd"
        color="#333333"
         icon='+'
      />
    </div>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .button-container {
    display: flex;
    gap: 1rem;
    flex-direction: column;
    margin-top: 1rem;
  }

  .button-container h2 {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
  }
</style>
